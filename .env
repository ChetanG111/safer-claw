# =============================================================================
# APP CONFIGURATION
# =============================================================================
# These variables configure your application. Copy this file to .env and fill
# in the values appropriate for your environment.

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# Connection string for your PostgreSQL database (used by Prisma/Drizzle)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/shipfree
PROD_DATABASE_URL=postgres://postgres:postgres@localhost:5432/shipfree ### used for production database migrations

# Production database URL - used when running migrations in production
# PROD_DATABASE_URL=postgres://user:password@host:5432/database

# -----------------------------------------------------------------------------
# APP URL
# -----------------------------------------------------------------------------
# Public URL of your application (used for OAuth callbacks, email links, etc.)
# For local development: http://localhost:3000
# For production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# NODE ENVIRONMENT
# -----------------------------------------------------------------------------
# Set to 'development', 'production', or 'test'
# NODE_ENV=development

# Client-side environment indicator (exposed to browser)
NEXT_PUBLIC_ENV=development
# Set to 'true' to bypass authentication in local development (Mocks an Admin User)
NEXT_PUBLIC_BYPASS_AUTH=true

# =============================================================================
# BETTER-AUTH CONFIGURATION
# =============================================================================
# Better-Auth is your authentication framework. These variables are required
# for secure session management and API endpoints.

# Secret key used to encrypt sessions and sign tokens.
# Generate one with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Base URL of your application (must match NEXT_PUBLIC_APP_URL)
BETTER_AUTH_URL=http://localhost:3000

